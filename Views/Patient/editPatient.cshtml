@model Hospital_Management_System.Models.Patient

@{
    ViewBag.Title = "Edit Patient";
    Layout = null;
    <partial name="_ValidationScriptsPartial" />
}

<!-- Bootstrap & Animate.css -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f7fe;
    }

    .edit-patient-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .form-card {
        display: flex;
        flex-direction: row;
        max-width: 1000px;
        width: 100%;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: fadeInUp 0.6s ease-in-out;
    }

    .form-left {
        background: linear-gradient(135deg, #2196f3, #64b5f6);
        color: white;
        width: 40%;
        padding: 40px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .form-left img {
            width: 100px;
            margin-bottom: 20px;
        }

        .form-left h4 {
            font-size: 1.6rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-left p {
            font-size: 1rem;
            opacity: 0.9;
        }

    .form-right {
        width: 60%;
        padding: 40px;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(33, 150, 243, 0.25);
        border-color: #2196f3;
    }

    .btn-primary {
        background-color: #2196f3;
        border: none;
        font-weight: 500;
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1976d2;
        }

    @@keyframes fadeInUp {
        from {
            transform: translateY(30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@media (max-width: 768px) {
        .form-card {
            flex-direction: column;
        }

        .form-left,
        .form-right {
            width: 100%;
        }

        .form-left {
            padding: 30px 15px;
        }

        .form-right {
            padding: 30px 20px;
        }
    }
</style>

<div class="edit-patient-wrapper">
    <div class="form-card animate__animated animate__fadeInUp">
        <!-- Left Panel -->
        <div class="form-left">
            <img src="https://cdn-icons-png.flaticon.com/512/4320/4320337.png" alt="Patient Icon" />
            <h4>Edit Patient</h4>
            <p>Update patient information</p>
        </div>

        <!-- Right Form Panel -->
        <div class="form-right">
            <form method="post" asp-action="editPatient" asp-controller="Patient">
                <input type="hidden" asp-for="patientId" />

                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input asp-for="PatientName" class="form-control" placeholder="Enter patient name" />
                    <span asp-validation-for="PatientName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Date of Birth</label>
                    <input asp-for="dateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="dateOfBirth" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <select asp-for="gender" class="form-select">
                        <option selected disabled>-- Select Gender --</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Phone Number</label>
                    <input asp-for="phoneNumber" class="form-control" placeholder="Enter Phone Number" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input asp-for="address" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">City</label>
                    <input asp-for="city" class="form-control" placeholder="Enter City" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">State</label>
                    <input asp-for="state" class="form-control" placeholder="Enter State" />
                    <span asp-validation-for="state" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" value="1" @(Model.isActive == 1 ? "checked" : "") />
                    <label class="form-check-label" for="IsActive">Is Active</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Update Patient</button>
                </div>
            </form>

            @if (TempData["patientUpdate"] != null)
            {
                <div class="mt-3">
                    @if (TempData["patientUpdate"].ToString() == "Exists")
                    {
                        <div class="alert alert-warning">Patient Already Exists</div>
                    }
                    else if (TempData["patientUpdate"].ToString() == "error")
                    {
                        <div class="alert alert-danger">Patient Not Updated</div>
                    }
                </div>
            }
        </div>
    </div>
</div>