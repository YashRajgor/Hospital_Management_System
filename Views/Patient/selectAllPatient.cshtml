@model List<Hospital_Management_System.Models.Patient>

@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
 *@
<style>
    body {
        background-color: #f4f7fe;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        border-radius: 16px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient(45deg, #2b8eff, #007bff);
        color: white;
        font-weight: bold;
        font-size: 1.5rem;
        text-align: center;
        border-radius: 16px 16px 0 0;
        padding: 1rem;
    }

    .badge-active {
        background-color: #28a745;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        color: white;
        font-weight: 500;
        animation: fadeIn 0.5s ease;
    }

    .badge-inactive {
        background-color: #dc3545;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        color: white;
        font-weight: 500;
        animation: fadeIn 0.5s ease;
    }

    .action-btn {
        border: none;
        border-radius: 8px;
        padding: 6px 14px;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-edit {
        background-color: #17a2b8;
    }

        .btn-edit:hover {
            background-color: #138496;
            transform: scale(1.05);
        }

    .btn-delete {
        background-color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #bd2130;
            transform: scale(1.05);
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .card-header {
            font-size: 1.2rem;
        }

        .action-btn {
            font-size: 0.75rem;
            padding: 5px 10px;
        }

        th, td {
            font-size: 0.85rem;
        }
    }
</style>

<div class="container mt-5">
    @* <div class="mt-4 feedback-message">
        <div class="alert alert-success shadow-sm" role="alert">
            @TempData["DeletePatient"]
        </div>
    </div> *@
    <div class="card">
        <div class="card-header">
            @* <i class="fas fa-user-md me-2"></i> *@Patient List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Patient Name</th>
                            <th>Date Of Birth</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Number</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>IsActive</th>
                            <th>Created</th>
                            <th>Modified</th>
                            <th>User Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model)
                        {
                            <tr>
                                <td>@doc.PatientName</td>
                                <td>@doc.dateOfBirth</td>
                                <td>@doc.gender</td>
                                <td>@doc.email</td>
                                <td>@doc.phoneNumber</td>
                                <td>@doc.address</td>
                                <td>@doc.city</td>
                                <td>@doc.state</td>
                                <td>
                                    @if (doc.isActive == 1)
                                    {
                                        <span class="badge-active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge-inactive">Inactive</span>
                                    }
                                </td>
                                <td>@doc.created.ToString("dd-MM-yyyy")</td>
                                <td>@doc.modified.ToString("dd-MM-yyyy")</td>
                                <td>@doc.userName</td>
                                <td>
                                    <a asp-controller="Patient" asp-action="editPatient" asp-route-patientId="@doc.patientId" class="action-btn btn-edit" title="Edit">
                                        <i class="fas fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="Patient" asp-action="deletePatient" asp-route-patientId="@doc.patientId" class="action-btn btn-delete" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-muted text-center">No Patient available....</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>