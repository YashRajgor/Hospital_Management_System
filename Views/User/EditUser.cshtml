@model Hospital_Management_System.Models.User

@{
    ViewBag.Title = "Edit User";
    Layout = null;
    <partial name="_ValidationScriptsPartial" />
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    :root {
        --accent: #2563eb; /* blue-600 */
        --accent-dark: #1e40af; /* blue-800 */
        --surface: #ffffff;
        --bg: #f6f7fb;
        --muted: #6b7280;
    }

    body {
        background: var(--bg);
        font-family: "Segoe UI", system-ui, sans-serif;
    }

    .page-wrap {
        min-height: 100vh;
        display: grid;
        place-items: center;
        padding: 32px 16px;
    }

    .card-pro {
        max-width: 860px;
        width: 100%;
        background: var(--surface);
        border-radius: 16px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 12px 24px rgba(0,0,0,.06);
        overflow: hidden;
        animation: slideFade .45s ease both;
    }

        /* Slim left accent bar */
        .card-pro::before {
            content: "";
            position: absolute;
            height: 100%;
            width: 6px;
            background: linear-gradient(180deg, var(--accent), var(--accent-dark));
            left: 0;
            top: 0;
        }

    .card-head {
        padding: 20px 28px 12px 34px;
        border-bottom: 1px solid #eef0f4;
    }

    .title-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
    }

    .title h1 {
        font-size: 1.35rem;
        margin: 0;
        font-weight: 700;
    }

    .title p {
        margin: 4px 0 0;
        color: var(--muted);
        font-size: .92rem;
    }

    .card-body {
        padding: 24px 28px 8px 34px;
    }

    .section-title {
        font-weight: 600;
        font-size: .9rem;
        color: #374151;
        margin: 4px 0 10px;
    }

    .form-label {
        font-weight: 600;
        color: #374151;
    }

    .input-group .input-group-text {
        background: #f3f4f6;
        border-color: #e5e7eb;
        color: #374151;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    .form-control {
        border-radius: 10px;
        border-color: #e5e7eb;
        padding: .65rem .9rem;
    }

        .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 .2rem rgba(37,99,235,.15);
        }

    .form-check-input:focus {
        box-shadow: 0 0 0 .2rem rgba(37,99,235,.15);
        border-color: var(--accent);
    }

    .form-check-input:checked {
        background-color: var(--accent);
        border-color: var(--accent);
    }

    .card-footer {
        padding: 16px 28px 24px 34px;
        border-top: 1px solid #eef0f4;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-primary {
        background: linear-gradient(90deg, var(--accent), var(--accent-dark));
        border: none;
        border-radius: 10px;
        padding: .65rem 1.1rem;
        font-weight: 600;
        transition: transform .15s ease;
    }

        .btn-primary:hover {
            transform: translateY(-1px);
        }

    .btn-outline-secondary {
        border-radius: 10px;
        padding: .65rem 1.05rem;
        font-weight: 600;
    }

    .alert {
        border-radius: 10px;
    }

    @@keyframes slideFade {
        from {
            opacity: 0;
            transform: translateY(10px)
        }

        to {
            opacity: 1;
            transform: translateY(0)
        }
    }

    @@media (max-width: 576px) {
        .card-head, .card-body, .card-footer {
            padding-left: 20px;
            padding-right: 20px;
        }

        .card-pro::before {
            width: 4px;
        }
    }
</style>

<div class="page-wrap">
    <div class="position-relative card-pro">
        <div class="card-head">
            <div class="title-row">
                <div class="title">
                    <h1><i class="fa-solid fa-user-pen me-2 text-primary"></i>User Profile</h1>
                    <p>Update account details and save your changes.</p>
                </div>
                <a asp-controller="Dashboard" asp-action="Dashboard"
                   class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left-long me-2"></i>Back
                </a>
            </div>
        </div>

        <form method="post" asp-action="EditUser" asp-controller="User" novalidate>
            <input type="hidden" asp-for="UserId" />
            <div class="card-body">
                <div class="section-title">Account</div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                            <input asp-for="userName" type="text" class="form-control" placeholder="Enter username" />
                        </div>
                        <span asp-validation-for="userName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                            <input asp-for="password" type="password" class="form-control" id="pwd" placeholder="Enter password" value="@Model.password" />
                            <button type="button" class="btn btn-outline-secondary" id="togglePwd" tabindex="-1">
                                <i class="fa-solid fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="password" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            <input asp-for="email" type="email" class="form-control" placeholder="name@company.com" />
                        </div>
                        <span asp-validation-for="email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                            <input asp-for="phoneNumber" type="text" class="form-control" placeholder="e.g. +1 555 123 4567" />
                        </div>
                        <span asp-validation-for="phoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-check mt-2">
                            <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" value="1" @(Model.isActive == 1 ? "checked" : "") />
                            <label class="form-check-label" for="IsActive">Active user</label>
                        </div>
                    </div>
                </div>

                @* Validation summary (optional) *@
                <div class="mt-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                </div>

                @* Alerts *@
                <div class="mt-3">
                    @if (TempData["UserEditMessage"]?.ToString() == "Exists")
                    {
                        <div class="alert alert-warning mb-0"><i class="fa-solid fa-triangle-exclamation me-2"></i>User already exists.</div>
                    }
                    else if (TempData["UserEditMessage"]?.ToString() == "error")
                    {
                        <div class="alert alert-danger mb-0"><i class="fa-solid fa-circle-xmark me-2"></i>User not updated.</div>
                    }
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk me-2"></i>Save Changes
                </button>
                <a asp-controller="Dashboard" asp-action="Dashboard" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-xmark me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<script>
    // Password visibility toggle
    (function(){
        const btn = document.getElementById('togglePwd');
        const input = document.getElementById('pwd');
        if(btn && input){
            btn.addEventListener('click', function(){
                const isPwd = input.type === 'password';
                input.type = isPwd ? 'text' : 'password';
                this.innerHTML = isPwd
                    ? '<i class="fa-solid fa-eye-slash"></i>'
                    : '<i class="fa-solid fa-eye"></i>';
            });
        }
    })();
</script>
