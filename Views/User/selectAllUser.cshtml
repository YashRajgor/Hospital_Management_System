<!-- Include this in your Razor view where dynamic data will be injected -->
@model List<Hospital_Management_System.Models.User>

<style>
    body {
        background-color: #f4f7fe;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.07);
        transition: 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .card-header {
        background-color: #2b8eff;
        color: white;
        font-weight: 600;
        font-size: 1.3rem;
        padding: 1rem;
        text-align: center;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .badge-active {
        background-color: #28a745;
        padding: 6px 10px;
        border-radius: 12px;
        font-size: 0.85rem;
        color: white;
    }

    .badge-inactive {
        background-color: #dc3545;
        padding: 6px 10px;
        border-radius: 12px;
        font-size: 0.85rem;
        color: white;
    }

    .action-btn {
        border: none;
        border-radius: 6px;
        padding: 6px 12px;
        font-size: 0.85rem;
        font-weight: 500;
        transition: 0.3s ease;
        color: #fff;
        margin: 2px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-edit {
        background-color: #17a2b8;
    }

        .btn-edit:hover {
            background-color: #138496;
            transform: scale(1.05);
        }

    .btn-delete {
        background-color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #bd2130;
            transform: scale(1.05);
        }
</style>
<div class="container mt-5">
    <div class="card">
        <div class="card-header">User List</div>
        <div class="card-body">
            <div class="table-responsive">
                <input type="hidden" />
                <table class="table table-bordered table-hover align-middle text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Mobile No.</th>
                            <th>IsActive</th>
                            <th>Created Date</th>
                            <th>Modified Date</th>
                            @* <th>Actions</th> *@
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Example static row -->
                        @foreach (var userinfo in Model)
                        {
                            <tr>
                                <td>@userinfo.userName</td>
                                <td>@userinfo.email</td>
                                <td>@userinfo.phoneNumber</td>
                                <td>
                                    @if (userinfo.isActive == 1)
                                    {
                                        <span class="badge-active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge-inactive">Inactive</span>
                                    }
                                </td>
                                <td>@userinfo.createdDate</td>
                                <td>@userinfo.modifiedDate</td>
                               @*  <td>
                                    @{
                                        if (userinfo.UserId == ViewBag.userId)
                                        {
                                            <a asp-controller="User" asp-action="EditUser" asp-route-userId="@userinfo.UserId" class="action-btn btn-edit">
                                                <i class="fas fa-pen-to-square"></i>
                                            </a>
                                            <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@userinfo.UserId" class="action-btn btn-delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                    }
                                </td> *@
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-muted text-center">No Departments available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
