@model Hospital_Management_System.Models.User

@{
    ViewBag.Title = "Add User";
    <partial name="_ValidationScriptsPartial" />
}

<!-- Bootstrap & Animate.css -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        background-color: #f4f7fe;
        font-family: 'Segoe UI', sans-serif;
    }

    .user-form-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 30px;
    }

    .form-card {
        display: flex;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 950px;
        width: 100%;
        overflow: hidden;
        animation: fadeInUp 0.6s ease-in-out;
    }

    .left-panel {
        width: 40%;
        background: linear-gradient(to bottom right, #2196f3, #64b5f6);
        color: white;
        padding: 40px 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

        .left-panel img {
            width: 100px;
            margin-bottom: 20px;
        }

        .left-panel h4 {
            font-size: 1.5rem;
            font-weight: bold;
        }

    .right-panel {
        width: 60%;
        padding: 40px;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(33, 150, 243, 0.25);
        border-color: #2196f3;
    }

    .btn-primary {
        background-color: #2196f3;
        border: none;
        font-weight: 500;
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1976d2;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .form-card {
            flex-direction: column;
        }

        .left-panel, .right-panel {
            width: 100%;
        }

        .right-panel {
            padding: 30px 20px;
        }
    }
</style>

<div class="user-form-wrapper">
    <div class="form-card animate__animated animate__fadeInUp">
        <!-- Left Panel -->
        <div class="left-panel">
            <img src="https://cdn-icons-png.flaticon.com/512/747/747376.png" alt="User Icon" />
            <h4>Register New User</h4>
            <p>Please fill out the user information to create an account.</p>
        </div>

        <!-- Right Panel: Form -->
        <div class="right-panel">
            <form method="post" asp-action="addUser" asp-controller="User">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label">Username</label>
                        <input asp-for="userName" class="form-control" placeholder="Enter username" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label">Email</label>
                        <input asp-for="email" type="email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <label class="form-label">Phone Number</label>
                        <input type="text" asp-for="phoneNumber" class="form-control" placeholder="Enter phone number" maxlength="10" />
                        <span asp-validation-for="phoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Save User</button>
                </div>
                <br />
                <div>
                    @if (TempData["UserMessage"]?.ToString() == "Exists")
                    {
                        <div class="alert alert-warning">User already exists.</div>
                    }
                    else if (TempData["UserMessage"]?.ToString() == "Success")
                    {
                        <div class="alert alert-success">User added successfully.</div>
                    }
                    else if (TempData["UserMessage"]?.ToString() == "failed")
                    {
                        <div class="alert alert-danger">User not insert.</div>
                    }
                    else if (TempData["UserMessage"]?.ToString() == "error")
                    {
                        <div class="alert alert-danger">Error during User insert.</div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
