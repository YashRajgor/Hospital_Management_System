@model List<Hospital_Management_System.Models.Appointment>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f4f7fe;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        border-radius: 16px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient(45deg, #2b8eff, #007bff);
        color: white;
        font-weight: bold;
        font-size: 1.5rem;
        text-align: center;
        border-radius: 16px 16px 0 0;
        padding: 1rem;
    }

    .badge-active {
        background-color: #28a745;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        color: white;
        font-weight: 500;
        animation: fadeIn 0.5s ease;
    }

    .badge-inactive {
        background-color: #dc3545;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        color: white;
        font-weight: 500;
        animation: fadeIn 0.5s ease;
    }

    .action-btn {
        border: none;
        border-radius: 8px;
        padding: 6px 14px;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-edit {
        background-color: #17a2b8;
    }

        .btn-edit:hover {
            background-color: #138496;
            transform: scale(1.05);
        }

    .btn-delete {
        background-color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #bd2130;
            transform: scale(1.05);
        }

    .custom-badge {
        padding: 6px 12px;
        font-size: 14px;
        font-weight: 500;
        border-radius: 20px;
        display: inline-block;
        color: white;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .badge-pending {
        background: #f7c948; /* soft yellow */
        color: #000;
    }

    .badge-process {
        background: #3b82f6; /* soft blue */
    }

    .badge-complete {
        background: #10b981; /* soft green */
    }

    .custom-badge:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .card-header {
            font-size: 1.2rem;
        }

        .action-btn {
            font-size: 0.75rem;
            padding: 5px 10px;
        }

        th, td {
            font-size: 0.85rem;
        }
    }
</style>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <i class="fas fa-calendar-check me-2"></i>Appoinment List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Patient Name</th>
                            <th>Department Name</th>
                            <th>Doctor Name</th>
                            <th>Appointment Date</th>
                            <th>Appointment Status</th>
                            <th>Description</th>
                            <th>SpecialRemarks</th>
                            <th>Crearted</th>
                            <th>Modified</th>
                            <th>Username</th>
                            <th>Total Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model)
                        {
                            <tr>
                                <td>@app.PatientName</td>
                                <td>@app.DepartmentName</td>
                                <td>@app.DoctorName</td>
                                <td>@app.AppointmentDate</td>
                                <td>
                                    @if (app.AppointmentStatus == "pending")
                                    {
                                        <span class="custom-badge badge-pending">Pending</span>
                                    }
                                    else if (app.AppointmentStatus == "process")
                                    {
                                        <span class="custom-badge badge-process">In Process</span>
                                    }
                                    else if (app.AppointmentStatus == "complete")
                                    {
                                        <span class="custom-badge badge-complete">Completed</span>
                                    }

                                </td>
                                <td>@app.Description</td>
                                <td>@app.SpecialRemarks</td>
                                <td>@app.Created</td>
                                <td>@app.Modified</td>
                                <td>@app.userName</td>
                                <td>@app.TotalConsultedAmount</td>
                                <td>
                                    <a asp-controller="Appointment" asp-action="EditAppointment" asp-route-appointmentId="@app.AppointmentId" class="action-btn btn-edit" title="Edit">
                                        <i class="fas fa-pen-to-square"></i>
                                    </a>
                                    @* <a asp-controller="Doctor" asp-action="deleteDoctor" asp-route-appointmentId="@app.AppointmentId" class="action-btn btn-delete" title="Delete"> 
                                        <i class="fas fa-trash-alt"></i>
                                    </a> *@
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-muted text-center">No doctors available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>