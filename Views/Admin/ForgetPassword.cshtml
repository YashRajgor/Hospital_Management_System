@model Hospital_Management_System.Models.Admin
@{
    Layout = null;
    var showOTPSection = TempData["ShowOTPSection"] != null && (bool)TempData["ShowOTPSection"]!;
    var showResetSection = TempData["ShowResetSection"] != null && (bool)TempData["ShowResetSection"]!;
    var message = TempData["AdminMessage"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <style>
        body {
            background: #ffffff;
            font-family: 'Segoe UI', sans-serif;
        }

        .page-wrap {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .card-custom {
            border: none;
            border-radius: 18px;
            background: #fff;
            padding: 35px 30px;
            max-width: 480px;
            width: 100%;
            box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        }

        .card-header {
            border: none;
            background: transparent;
            text-align: center;
            margin-bottom: 20px;
        }

            .card-header i {
                font-size: 3rem;
                color: #2563eb;
            }

            .card-header h4 {
                margin-top: 10px;
                font-weight: 700;
                color: #111827;
            }

        .form-label {
            font-weight: 600;
            color: #374151;
        }

        .input-group-text {
            background: #f9fafb;
            border-radius: 10px 0 0 10px;
        }

        .form-control {
            border-radius: 0 10px 10px 0;
            border-color: #e5e7eb;
            padding: .65rem .9rem;
        }

        .btn-custom {
            background: linear-gradient(90deg, #2563eb, #1e40af);
            color: white;
            font-weight: 600;
            border: none;
            border-radius: 10px;
            padding: .7rem 1.2rem;
        }

            .btn-custom:hover {
                background: linear-gradient(90deg, #1e40af, #2563eb);
            }

        .hidden {
            display: none;
        }

        #message {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="page-wrap">
        <div class="card-custom animate__animated animate__fadeInUp">
            <div class="card-header">
                <i class="fa-solid fa-key"></i>
                <h4>Forgot Password?</h4>
                <p class="text-muted small">We’ll send you an OTP to reset your password</p>
            </div>
            <div class="card-body">
                <form asp-action="ForgetPassword" method="post">
                    <!-- Email Section -->
                    <div id="emailSection" class="@(showOTPSection || showResetSection ? "hidden" : "") mb-3">
                        <label asp-for="email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            <input asp-for="email" class="form-control" placeholder="Enter your email" />
                        </div>
                        <span asp-validation-for="email" class="text-danger"></span>
                        <div class="d-grid mt-3">
                            <button type="submit" name="actionStep" value="sendOTP" class="btn btn-custom">
                                <i class="fa-solid fa-paper-plane"></i> Send OTP
                            </button>
                        </div>
                    </div>

                    <!-- OTP Section -->
                    <div id="otpSection" class="@(showOTPSection ? "" : "hidden") mb-3">
                        <label asp-for="OTP" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-shield-halved"></i></span>
                            <input asp-for="OTP" class="form-control" placeholder="Enter OTP" />
                        </div>
                        <span asp-validation-for="OTP" class="text-danger"></span>
                        <div class="d-grid mt-3">
                            <button type="submit" name="actionStep" value="verifyOTP" class="btn btn-success">
                                <i class="fa-solid fa-check"></i> Verify OTP
                            </button>
                        </div>
                    </div>

                    <!-- Reset Password Section -->
                    <div id="resetSection" class="@(showResetSection ? "" : "hidden") mb-3">
                        <label asp-for="newPassword" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                            <input asp-for="newPassword" class="form-control" placeholder="Enter new password" />
                        </div>
                        <span asp-validation-for="newPassword" class="text-danger"></span>
                        <br />
                        <label asp-for="confirmNewPassword" class="form-label mt-2"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                            <input asp-for="confirmNewPassword" class="form-control" placeholder="Confirm password" />
                        </div>
                        <span asp-validation-for="confirmNewPassword" class="text-danger"></span>

                        <div class="d-grid mt-3">
                            <button type="submit" name="actionStep" value="resetPassword" class="btn btn-custom">
                                <i class="fa-solid fa-unlock"></i> Reset Password
                            </button>
                        </div>
                    </div>

                    <!-- Message -->
                    <div class="text-center mt-3">
                        @if (TempData["AdminMessage"] != null)
                        {
                            // Get the message and type from TempData
                            var msg = TempData["AdminMessage"]?.ToString();
                            var type = TempData["AdminMessageType"]?.ToString() ?? "info";

                            // Decide CSS class based on type
                            string cssClass = "fw-bold"; // default
                            if (type == "success") cssClass = "text-success fw-bold";
                            else if (type == "error") cssClass = "text-danger fw-bold";
                            else if (type == "warning") cssClass = "text-warning fw-bold";

                            <small class="@cssClass">@msg</small>
                        }
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>