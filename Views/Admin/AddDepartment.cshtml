@model Hospital_Management_System.Models.Department

@{
    ViewBag.Title = "Add Department";
    <partial name="_ValidationScriptsPartial" />
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Animate.css -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f4f7fe;
        font-family: 'Segoe UI', sans-serif;
    }

    .main-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-wrapper {
        display: flex;
        flex-direction: row;
        width: 900px;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        animation: fadeInUp 0.8s ease-in-out;
    }

    .left-panel {
        width: 35%;
        background: linear-gradient(135deg, #1e90ff, #3793ff);
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px 25px;
        text-align: center;
    }

        .left-panel img {
            width: 100px;
            margin-bottom: 20px;
            animation: zoomIn 1s ease-in-out;
        }

        .left-panel h4 {
            font-weight: bold;
        }

        .left-panel p {
            font-size: 14px;
            margin-top: 10px;
            opacity: 0.9;
        }

    .right-panel {
        width: 65%;
        padding: 40px;
        background-color: #ffffff;
        animation: fadeIn 1s ease-in-out;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #2b8eff;
            box-shadow: 0 0 0 0.2rem rgba(43, 142, 255, 0.25);
        }

    .btn-submit {
        background-color: #2b8eff;
        border: none;
        padding: 10px 30px;
        color: white;
        font-weight: 500;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-submit:hover {
            background-color: #1f6fd4;
            transform: scale(1.02);
        }

    .alert {
        margin-top: 15px;
        animation: fadeIn 0.5s ease-in-out;
    }

    @@media (max-width: 768px) {
        .form-wrapper {
            flex-direction: column;
            width: 95%;
        }

        .left-panel,
        .right-panel {
            width: 100%;
            padding: 25px;
        }

        .left-panel {
            border-radius: 20px 20px 0 0;
        }

        .right-panel {
            border-radius: 0 0 20px 20px;
        }
    }
</style>

<div class="main-container">
    <div class="form-wrapper animate__animated animate__fadeInUp">
        <!-- Left Blue Panel -->
        <div class="left-panel">
            <img src="https://cdn-icons-png.flaticon.com/512/1159/1159633.png" alt="Department Icon" />
            <h4>Add New Department</h4>
            <p>Please fill out department details to continue.</p>
        </div>

        <!-- Right Form Panel -->
        <div class="right-panel">
            <form method="post" asp-controller="Admin" asp-action="AddDepartment">
                <div class="mb-3">
                    <label for="DepartmentName" class="form-label">Department Name</label>
                    <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="DepartmentDescription" class="form-label">Description</label>
                    <input asp-for="DepartmentDescription" class="form-control" placeholder="Enter description" />
                    <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-submit">Add Department</button>
                </div>

                <!-- Alert Messages -->
                <div>
                    @if (TempData["Message"] == "Exists")
                    {
                        <div class="alert alert-warning">Department already exists.</div>
                    }
                    else if (TempData["Message"] == "Sussfully")
                    {
                        <div class="alert alert-success">Department added successfully.</div>
                    }
                    else if (TempData["Message"] == "failed")
                    {
                        <div class="alert alert-danger">Department not inserted.</div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>






