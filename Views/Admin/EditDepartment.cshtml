@model Hospital_Management_System.Models.Department

@{
    ViewBag.Title = "Edit Department";
    Layout = null;
    <partial name="_ValidationScriptsPartial" />
}

<!-- Bootstrap & Animate.css -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f4f7fe;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .edit-wrapper {
        width: 900px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        display: flex;
        animation: fadeInUp 0.6s ease-in-out;
    }

    .left-panel {
        width: 35%;
        background: linear-gradient(135deg, #1e90ff, #3793ff);
        color: white;
        padding: 40px 25px;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .left-panel img {
            width: 100px;
            margin: 0 auto 20px;
            animation: zoomIn 1s ease-in-out;
        }

        .left-panel h4 {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .left-panel p {
            font-size: 14px;
            opacity: 0.9;
        }

    .right-panel {
        width: 65%;
        padding: 40px;
        background-color: #fff;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #2b8eff;
            box-shadow: 0 0 0 0.2rem rgba(43, 142, 255, 0.25);
        }

    .btn-primary {
        background-color: #2b8eff;
        border: none;
        padding: 10px 30px;
        font-weight: 500;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #1f6fd4;
            transform: scale(1.02);
        }

    .alert {
        margin-top: 15px;
        animation: fadeIn 0.5s ease-in-out;
    }

    @@media (max-width: 768px) {
        .edit-wrapper {
            flex-direction: column;
            width: 95%;
        }

        .left-panel, .right-panel {
            width: 100%;
            padding: 25px;
        }

        .left-panel {
            border-radius: 20px 20px 0 0;
        }

        .right-panel {
            border-radius: 0 0 20px 20px;
        }
    }
</style>

<div class="edit-wrapper animate__animated animate__fadeInUp">
    <!-- Left Side Panel -->
    <div class="left-panel">
        <img src="https://cdn-icons-png.flaticon.com/512/1159/1159633.png" alt="Department Icon" />
        <h4>Edit Department</h4>
        <p>Update department details using the form on the right.</p>
    </div>

    <!-- Right Side Form -->
    <div class="right-panel">
        <form method="post" asp-action="EditDepartment" asp-controller="Admin">
            <input type="hidden" name="id" value="@Model.departmentId" />

            <div class="mb-3">
                <label class="form-label">Department Name</label>
                <input type="text" asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="DepartmentDescription" class="form-control" placeholder="Enter description" />
                <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
            </div>

            <div class="form-check mb-4">
                <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" value="1" @(Model.IsActive == 1 ? "checked" : "") />
                <label class="form-check-label" for="IsActive">Is Active</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Update Department</button>
            </div>

            @if (TempData["alert"] == "Exists")
            {
                <div class="alert alert-warning">Department Already Exists</div>
            }
            else if (TempData["Message"] == "error")
            {
                <div class="alert alert-danger">Department Not Updated</div>
            }
        </form>
    </div>
</div>





